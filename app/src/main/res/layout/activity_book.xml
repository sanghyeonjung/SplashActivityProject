<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".book_activity">

    <ImageButton
        android:id="@+id/book_back_button"
        android:layout_width="24dp"
        android:layout_height="23dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_vector_9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageButton>

    <androidx.cardview.widget.CardView
        android:id="@+id/book_example_image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="70dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/book_back_button">

        <ImageView
            android:layout_width="148dp"
            android:layout_height="210dp"
            android:src="@drawable/image_1" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/book_example_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/notosanskrm"
        android:includeFontPadding="false"
        android:lineSpacingExtra="9sp"
        android:text="달러구트 꿈 백화점"
        android:textColor="#3d3d3d"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/book_example_image1"></TextView>

    <TextView
        android:id="@+id/book_example_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:fontFamily="@font/notosanskrm"
        android:includeFontPadding="false"
        android:text="30개의 투자"
        android:textColor="#3d3d3d"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/book_example_text1"></TextView>

    <TextView
        android:id="@+id/book_example_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginRight="24dp"
        android:fontFamily="@font/notosanskrm"
        android:includeFontPadding="false"
        android:text="20,000 원"
        android:textColor="#3d3d3d"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/book_example_text1"></TextView>

    <TextView
        android:id="@+id/book_example_text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/notosanskrm"
        android:includeFontPadding="false"
        android:text="책 소개"
        android:textColor="#3d3d3d"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/book_example_text3"></TextView>

    <TextView
        android:id="@+id/book_example_text5"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:fontFamily="@font/notosanskrm"
        android:includeFontPadding="false"
        android:lineHeight="24sp"
        android:text="잠들어야만 입장 가능한 꿈 백화점에서 일어나는
비밀스럽고도 기묘하여 가슴 뭉클한 판타지 소설"
        android:textColor="#3d3d3d"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/book_example_text4"></TextView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:layout_marginTop="50dp"
        android:paddingLeft="24dp"
        app:layout_constraintTop_toBottomOf="@id/book_example_text5">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/book_genre"
            android:layout_width="100dp"
            android:layout_height="93dp"
            android:background="@drawable/corner_radius_layout_background"
            android:backgroundTint="#EAEBEC"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/book_type1"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/book_genre_box_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/notosanskrr"
                android:includeFontPadding="false"
                android:text="장르"
                android:textColor="#3d3d3d"
                android:textSize="10sp"
                app:layout_constraintBottom_toTopOf="@id/book_genre_bow_image1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"></TextView>

            <ImageView
                android:id="@+id/book_genre_bow_image1"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_____52_1_"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/book_genre_box_text1"></ImageView>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskrm"
                android:text="판타지"
                android:textColor="#3d3d3d"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/book_genre_bow_image1"></TextView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/book_type1"
            android:layout_width="100dp"
            android:layout_height="93dp"
            android:background="@drawable/corner_radius_layout_background"
            android:backgroundTint="#EAEBEC"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/book_genre"
            app:layout_constraintRight_toLeftOf="@id/book_type2"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/notosanskrr"
                android:text="유형"
                android:textColor="#3d3d3d"
                android:textSize="10sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskrm"
                android:text="단편 소설"
                android:textColor="#3d3d3d"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"></TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/book_type2"
            android:layout_width="100dp"
            android:layout_height="93dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/corner_radius_layout_background"
            android:backgroundTint="#EAEBEC"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/book_type1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/book_type2_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/notosanskrr"
                android:text="유형"
                android:textColor="#3d3d3d"
                android:textSize="10sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"></TextView>

            <ImageView
                android:id="@+id/book_type2_category2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_ellipse_9"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/book_type2_category" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskrm"
                android:text="단편 소설"
                android:textColor="#3d3d3d"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/book_type2_category2" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/read_custom_button"
        android:backgroundTint="#EAEBEC"
        android:fontFamily="@font/notosanskrm"
        android:text="읽어보기"
        android:textColor="#3D3D3D"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/invest_custom_button"
        android:fontFamily="@font/notosanskrm"
        android:text="투자하기"
        android:textColor="#FFFFFF"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>